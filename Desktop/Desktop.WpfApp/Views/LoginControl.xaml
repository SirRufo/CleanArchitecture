<UserControl
      x:Class="Desktop.WpfApp.Views.LoginControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Desktop.WpfApp.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:Desktop.Presentation.ViewModels;assembly=Desktop.Presentation"
      d:DataContext="{d:DesignInstance Type=vm:LoginViewModel,
                                       IsDesignTimeCreatable=False}"
      d:DesignHeight="450"
      d:DesignWidth="800"
      mc:Ignorable="d">
    <Grid>
        <Button
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Command="{Binding LoginCommand}"
              Content="Login" />
    </Grid>
</UserControl>
